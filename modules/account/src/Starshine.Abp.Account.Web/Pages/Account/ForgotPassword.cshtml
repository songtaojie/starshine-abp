@page "/account/forgot-password"
@inject IHtmlLocalizer<AccountResource> L
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Account.Localization
@section styles {
    <link href="~/libs/starshine/css/forgot-password.css" rel="stylesheet" asp-append-version="true" />
}

@model Starshine.Abp.Account.Web.Pages.Account.ForgotPasswordModel
<div class="card mb-5 shadow rounded border-0 w-100">
    <div class="card-body p-5">
        <h4 class="fw-bold mb-4">@L["ForgotPassword"]</h4>
        <p class="fs-7 text-secondary mb-4">@L["SendPasswordResetLink_Information"]</p>
        <form method="post" class="needs-validation" novalidate>
            <div class="mb-4 ">
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-regular fa-envelope"></i></span>
                    <input asp-for="Email" placeholder="@Html.DisplayNameFor(m => m.Email)" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 mb-4">
                <button type="submit" class="btn btn-primary" name="button">
                    <i class="fas fa-paper-plane me-2"></i>
                    @L["Submit"]
                </button>
            </div>
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" asp-route-returnUrlHash="@Model.ReturnUrlHash"
               class="text-secondary text-decoration-none d-inline-flex align-items-center">
                <i class="fa fa-long-arrow-left"></i> @L["Login"]
            </a>
        </form>
    </div>
</div>

