@page "/account/reset-password-confirmation"
@model Starshine.Abp.Account.Web.Pages.Account.ResetPasswordConfirmationModel
@inject Volo.Abp.AspNetCore.Mvc.UI.Layout.IPageLayout PageLayout
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Account.Localization
@inject IHtmlLocalizer<AccountResource> L
@section styles {
    <style>
        :root {
            --transition-time: 0.3s;
        }

        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            display: flex;
            background-image: linear-gradient(135deg,#f5f7fa 0%, #e4e8eb 100%);
        }

        .card {
            --bs-card-border-width: 0px;
            transform: translateY(-30%);
        }

            .card:hover {
                box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            }

        .success-icon {
            font-size: 3.5rem;
            color: var(--success-color);
            margin-bottom: 1.5rem;
            animation: fadeIn 0.8s ease;
        }

        h4 {
            font-weight: 600;
            margin-bottom: 1rem;
            color: #2c3e50;
            font-size: 1.5rem;
        }

        p {
            color: #7f8c8d;
            margin-bottom: 2rem;
            font-size: 1rem;
        }

        .btn-primary {
            padding: 0.75rem 1.5rem;
            box-shadow: 0 2px 10px rgba(58, 134, 255, 0.3)
        }

            .btn-primary:hover {
                background-color: #2a75ff;
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(58,134,255,0.4);
            }

        .countdown {
            margin-top: 1.5rem;
            font-size: 0.9rem;
            color: #95a5a6;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: scale(0.8);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }
    </style>
}
<div class="card rounded p-3" style="max-width:28rem;">
    <div class="card-body d-flex flex-column align-items-center ">
        <div class="success-icon text-success">
            <i class="fas fa-check-circle"></i>
        </div>
        <h4>@L["ResetPassword"]</h4>
        <p class="text-wrap text-break">@L["YourPasswordIsSuccessfullyReset"]</p>
        <a class="btn btn-primary" href="@Url.Content(Model.ReturnUrl)">@L["GoToTheApplication"]</a>
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function() {
            var seconds = 5;
            var countdown = setInterval(function() {
                seconds--;
                $('#countdown').text(seconds);

                if (seconds <= 0) {
                    clearInterval(countdown);
                    window.location.href  = "@Url.Content(Model.ReturnUrl)";
                }
            }, 1000);
            // 优雅的页面进入动画
            // $('.card').css({
            //     'opacity': '0',
            //     'transform': 'translateY(-50%)'
            // }).animate({
            //     'opacity': '1',
            //     'transform': 'translateY(0)'
            // }, 600);
        });
    </script>
}


